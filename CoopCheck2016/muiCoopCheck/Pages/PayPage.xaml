<UserControl x:Class="CoopCheck.WPF.Pages.PayPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:voucher="clr-namespace:CoopCheck.WPF.Content.Voucher"
             xmlns:status="clr-namespace:CoopCheck.WPF.Content.Status"
             mc:Ignorable="d" >
    <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Style="{StaticResource ContentRoot}" Grid.Row="0">
                    <ScrollViewer>
                        <voucher:PayVoucherView/>
                    </ScrollViewer>
                </Grid>
                <Grid  Grid.Row="1">
                    <status:StatusView />
                </Grid>
            </Grid>
</UserControl>
