<UserControl x:Class="CoopCheck.WPF.Pages.Report.GlobalReportCriteriaView"
    xmlns:reportCriteria="clr-namespace:CoopCheck.WPF.Pages.Report"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        xmlns:report="clr-namespace:CoopCheck.WPF.Pages.Report"
        mc:Ignorable="d ignore">
    <Border CornerRadius="5" BorderThickness="1" Width="Auto" BorderBrush="Black">
        <Grid MinWidth="350" Height="50" >
                <StackPanel Orientation="Horizontal" Name="spCriteria" Visibility="{Binding ShowControl}">
                    <report:ReportDateRangeView x:Name="DR"/>
                    <Button Name="Refresh" FontSize="12" Width="Auto" Margin="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Click="Refresh_Click">Refresh</Button>
                </StackPanel>
        </Grid>
    </Border>

</UserControl>
