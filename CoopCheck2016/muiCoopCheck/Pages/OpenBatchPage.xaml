<UserControl x:Class="CoopCheck.WPF.Pages.OpenBatchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:voucher="clr-namespace:CoopCheck.WPF.Content.Voucher"
             xmlns:import="clr-namespace:CoopCheck.WPF.Content.Voucher.Import"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel Orientation="Vertical" >
                <Expander  Header="Open Batches">
                    <voucher:BatchListView/>
                </Expander>
                <voucher:BatchEditView />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
