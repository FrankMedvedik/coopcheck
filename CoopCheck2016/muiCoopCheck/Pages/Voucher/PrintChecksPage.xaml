<UserControl x:Class="CoopCheck.WPF.Pages.Voucher.PrintChecksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                
                <TextBlock Text="print checks page" Style="{StaticResource Heading2}" />
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Width="140">Batch</TextBlock> 
                    <TextBox Text="{Binding SelectedBatchNum}" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Width="140">Starting Check Number</TextBlock>
                    <TextBox Text="{Binding StartingCheckNum}" Width="100"/>
                </StackPanel>
                
                <Button Name="btnPrint" Click="btnPrint_Click">Print</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
