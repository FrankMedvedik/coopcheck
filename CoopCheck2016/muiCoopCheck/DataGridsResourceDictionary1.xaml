<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mui="http://firstfloorsoftware.com/ModernUI">
    <mui:DataGridTextColumn x:Key="dgPJob" Binding="{Binding job_num}"  Header="job"/>
    <mui:DataGridTextColumn x:Key="dgPEmail" Binding="{Binding email}" Header="email" />
    <mui:DataGridTextColumn x:Key="dgPLast" Binding="{Binding last_name}"  Header="last" />
    <mui:DataGridTextColumn x:Key="dgPFirst" Binding="{Binding first_name}" Header="first" />
    <mui:DataGridCheckBoxColumn x:Key="dgPCleared"  Binding="{Binding cleared_flag}" Header="cleared?"/>
    <mui:DataGridTextColumn x:Key="dgPPhone" Binding="{Binding phone_number}" Header="phone"/>
    <mui:DataGridTextColumn x:Key="dgPCity" Binding="{Binding municipality}" Header="city" />
    <mui:DataGridTextColumn x:Key="dgPState" Binding="{Binding region}"  Header="state" />
    <mui:DataGridTextColumn x:Key="dgPZip" Binding="{Binding postal_code }" Header="zip" />
    <mui:DataGridTextColumn x:Key="dgPDate" Binding="{Binding check_date,StringFormat=d}" Header="payment date" />
    <mui:DataGridTextColumn x:Key="dgPCheckNum" Binding="{Binding check_num}" Header="payment #" />
    <mui:DataGridTextColumn x:Key="dgPAmount"  Binding="{Binding tran_amount, StringFormat=c}" Header="amount" />
    <mui:DataGridTextColumn x:Key="dgPCompany"  Binding="{Binding company}"  Header="company"/>
    <mui:DataGridTextColumn x:Key="dgPAddress1" Binding="{Binding address_1}" Header="address 1" />
    <mui:DataGridTextColumn x:Key="dgPAddress2" Binding="{Binding address_2}" Header="address 2" />
    <mui:DataGridCheckBoxColumn x:Key="dgPPrintFlag" Binding="{Binding print_flag}" Header="printed?"/>
</ResourceDictionary>