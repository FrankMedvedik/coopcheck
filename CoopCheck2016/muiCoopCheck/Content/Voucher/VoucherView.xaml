<UserControl 
        x:Class="CoopCheck.WPF.Content.Voucher.VoucherView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:clean="clr-namespace:CoopCheck.WPF.Content.Voucher.Clean"
        xmlns:import="clr-namespace:CoopCheck.WPF.Content.Voucher.Import"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:save="clr-namespace:CoopCheck.WPF.Content.Voucher.Save"
        mc:Ignorable="d ignore">
        <Grid >
        <ScrollViewer> 
            <xctk:Wizard x:Name="VoucherWizard" FinishButtonClosesWindow="True" CanCancel="True" CancelButtonClosesWindow="True" PageChanged="PageChanged" 
                         HorizontalAlignment="Left" VerticalAlignment="Top" ExteriorPanelMinWidth="0" HelpButtonVisibility="Hidden" >
                <xctk:WizardPage x:Name="LoadVouchers" 
                                   Title="Load Vouchers"
                                 NextPage="{Binding ElementName=DataClean}" CanSelectNextPage="{Binding HaveValidWorkbook}"  >
                    <import:ImportWorksheetView x:Name="iwv"/>
                </xctk:WizardPage>
                <!--<xctk:WizardPage x:Name="DataClean" PageType="Interior"
                                   Title="Validate Vouchers"
                                   Description="This step checks the name, mailing adddress and other elements"
                                   NextPage="{Binding ElementName=ListVouchers}"
                                   PreviousPage="{Binding ElementName=LoadVouchers}" CanSelectNextPage="{Binding HaveCleanedVouchers}"  >
                    <clean:VoucherCleanView x:Name="vcv"/>
                </xctk:WizardPage >-->
                <xctk:WizardPage x:Name="ListVouchers" PageType="Interior"
                                   Title="Edit Vouchers"
                                   NextPage="{Binding ElementName=SaveVouchers}"
                                   PreviousPage="{Binding ElementName=DataClean}"  
                                   CanSelectNextPage="{Binding HaveReviewedVouchers}">
                    <clean:VoucherListView x:Name="vlv"/>
                </xctk:WizardPage>
                <xctk:WizardPage x:Name="SaveVouchers" PageType="Interior"
                                   Title="Save vouchers"
                                   CanFinish="{Binding HaveCommittedVouchers}">
                    <save:VoucherSaveView x:Name="vsv"/>
                </xctk:WizardPage>
            </xctk:Wizard>
        </ScrollViewer>
    </Grid>
</UserControl>
