<UserControl xmlns:Voucher="clr-namespace:CoopCheck.WPF.Content.Voucher"  x:Class="CoopCheck.WPF.Content.Voucher.Edit.BatchListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
             mc:Ignorable="d" 
             Height="300" Width="1000">
        <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
            <mui:ModernProgressRing IsActive="{Binding IsBusy}" Grid.Column="0"  Grid.Row="0" Width="80" Height="80" Style="{StaticResource ChasingDotsProgressRingStyle}" />
        <DataGrid AutoGenerateColumns="False" Grid.Row="0" Grid.Column="0" Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisConverter}}" 
                IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="12"
                ItemsSource="{Binding BatchList, Mode=TwoWay}" HorizontalScrollBarVisibility="Auto" Height="Auto" 
                VerticalScrollBarVisibility="Auto" SelectedItem="{Binding SelectedBatch, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding batch_num }" Header="Batch Number"/>
                    <DataGridTextColumn Binding="{Binding batch_label }" Header="Description" Width="300"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
</UserControl>
