<UserControl x:Class="CoopCheck.WPF.Pages.NewBatchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:status="clr-namespace:CoopCheck.WPF.Content.Status"
             xmlns:edit="clr-namespace:CoopCheck.WPF.Content.Voucher.Edit"
             xmlns:unpay="clr-namespace:CoopCheck.WPF.Content.Utilities.Unpay"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Style="{StaticResource ContentRoot}" Grid.Row="0">
            <ScrollViewer>
                <unpay:BatchEditView x:Name="be" BatchNum="-1" />
            </ScrollViewer>
        </Grid>
        <Grid  Grid.Row="1">
            <status:StatusView />
        </Grid>
    </Grid>
</UserControl>
